  background-color: #28a745;
  border-color: #28a745;
}

.btn-secondary {
  background-color: #c2c5c7;
  border-color: #6c757d;
  color: white;
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: rgba(0, 0, 0, 0.02);
}

.table td,
.table th {
  padding: 0.75rem;
  vertical-align: middle;
}

/* Make sure the table takes full width */
.table {
  width: 100%;
  margin-bottom: 20px;

}

/* Remove bottom margin from the last row in the table */
.table tbody tr:last-child {
  border-bottom: none;
}

/* Styling for the action buttons */
.btn-sm {
  padding: 0.25rem 0.5rem;
}

/* Make sure icons are properly sized */
.fas {
  font-size: 0.875rem;
}

.rowed {
  margin-bottom: 20px;
}
</style>

