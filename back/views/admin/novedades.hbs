

<div class="container" style="margin-top: 50px;">
  {{!-- fila 1 --}}
  <div class="row">
    <p class="text-end">Hola {{usuario}} !  
      <a class="btn btn-danger rounded-pill ms-2" href="/admin/login">
        Cerrar sesión 
        <i class="fas fa-sign-out-alt"></i>
      </a>
    </p>
  </div>
  {{!-- fin fila 1 --}}
  
  {{!-- fila 2 --}}
  <div class="row mb-3">
    <div class="col-7">
      <h3 class="fw-bold">Listado de Novedades</h3>
    </div>
    <div class="col-5 text-end">
      <a class="btn btn-success rounded-pill" href="/admin/novedades/agregar">
        <i class="bi bi-plus" aria-hidden="true"></i> Nuevo
      </a>
    </div>

  </div>
  {{!-- fin fila 2 --}}

  {{!-- fila 3 --}}
  <div class="rowed">
    <div class="col">
      <div class="border rounded overflow-hidden">
        <table class="table table-striped mb-0">
          <thead>
            <tr class="table-dark">
              <th scope="col" width="5%">#</th>
              <th scope="col">título</th>
              <th class="text-end" width="15%">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each novedades}}
            <tr id={{id}}>
              <td>{{id}}</td>
              <td>{{titulo}}</td>
              <td class="text-end">
                <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary me-1">
                  <i class="bi bi-pencil"></i>
                </a>
               <form action="/admin/novedades/borrar" method="POST" style="display:inline;">
                <input type="hidden" name="id" value="{{id}}">
                <button type="submit" title="Eliminar" class="btn btn-sm btn-secondary">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {{!-- fin fila 3 --}}
</div>

<style>
  .table-dark {
  background-color: #9da2a8;
}

.btn-danger {
  background-color: #dc3545;
  border-color: #dc3545;
}

